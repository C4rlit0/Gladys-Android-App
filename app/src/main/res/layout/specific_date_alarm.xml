<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/alarmSpeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom" />

    <EditText
        android:id="@+id/alarmSpeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alarmSpeName"
        android:layout_below="@+id/alarmSpeName"
        android:layout_marginTop="16dp"
        android:drawableEnd="@drawable/ic_clock"
        android:ems="10"
        android:hint="Heure"
        android:inputType="time" />

    <EditText
        android:id="@+id/alarmSpeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alarmSpeTime"
        android:layout_below="@+id/alarmSpeTime"
        android:layout_marginTop="22dp"
        android:drawableEnd="@drawable/ic_date"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

</RelativeLayout>